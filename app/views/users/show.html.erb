<%= render 'shared/header', title: "Two Tone Twitter" %>

<%= link_to "Tweet away!", new_user_tweet_path(@user), id: "new_tweet", remote: true %>

<% if @user.tweets.any? %>

  <h1><%= @user.username %>'s Tweets</h1>

  <ul>
    <% @user.tweets.each do |tweet| %>
    <li><p><%= tweet.body %></p></li>
    <% end %>
  </ul>

<% else %>
  <br>

  <h3><%= @user.username %> has no tweets yet!</h3>

<% end %>
